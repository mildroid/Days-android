<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mildroid.days">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_days_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_days_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Days.Starting">
        <activity
            android:name=".ui.unsplash.UnsplashPhotoListActivity"
            android:exported="true"
            android:theme="@style/Theme.Days" >

        </activity>
        <activity
            android:name=".ui.add.AddEventActivity"
            android:exported="true"
            android:theme="@style/Theme.Days"
            android:windowSoftInputMode="stateVisible">

        </activity>
        <activity
            android:name=".ui.event.EventActivity"
            android:exported="false"
            android:theme="@style/Theme.Days" />
        <activity
            android:name=".ui.FragmentContainerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>