<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/event_pager_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/event_pager_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Hello How are yo"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/event_pager_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:text="this is 12 Jan"/>

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/event_pager_item_check"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:lottie_rawRes="@raw/square_check"
        app:lottie_speed="1.2"
        android:layout_gravity="top|end"
        android:layout_margin="32dp"/>

</FrameLayout>